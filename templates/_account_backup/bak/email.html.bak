{% extends "base.html" %}
{% block title %}Email-адреса — NewUser{% endblock %}
{% block content %}
  <h1>Email-адреса</h1>

  {% if user.emailaddress_set.all %}
    <form method="post" action="{% url 'account_email' %}">
      {% csrf_token %}
      <ul>
        {% for e in user.emailaddress_set.all %}
          <li>
            <label>
              <input type="radio" name="email" value="{{ e.email }}">
              {{ e.email }}
              {% if e.primary %}(основной){% endif %}
              {% if e.verified %}(подтверждён){% else %}(не подтверждён){% endif %}
            </label>
          </li>
        {% endfor %}
      </ul>
      <button name="action_primary" type="submit" class="btn">Сделать основным</button>
      <button name="action_send" type="submit" class="btn">Отправить письмо подтверждения</button>
      <button name="action_remove" type="submit" class="btn">Удалить</button>
    </form>
  {% else %}
    <p>Пока нет ни одного email-адреса.</p>
  {% endif %}

  <h2>Добавить новый email</h2>
  <form method="post" action="{% url 'account_email' %}">
    {% csrf_token %}
    {{ add_email_form.as_p }}
    <button type="submit" name="action_add" class="btn">Добавить</button>
  </form>
{% endblock %}
